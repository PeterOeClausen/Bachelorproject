<Page
    x:Class="DROM_Client.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DROM_Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#e0e0e0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" CornerRadius="20" Padding="20">
            <TextBlock Text="Welcome to the DCRGraph Order Management System" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Please choose the restaurant in which this program is used:" HorizontalAlignment="Center" FontStyle="Italic"  ></TextBlock>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <!--<TextBlock Text="Username:" Grid.Row="0" HorizontalAlignment="Left"></TextBlock>
                    <TextBox Grid.Row="0" IsSpellCheckEnabled="False"></TextBox>-->
                    <TextBlock Text="Restaurant number:"/>
                    <ComboBox HorizontalAlignment="Stretch" 
                              PlaceholderText="Click here to pick a restaurant" 
                              SelectionChanged="Restaurant_Number_ComboBox_SelectionChanged">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                    </ComboBox>
                </StackPanel>
                <!--<StackPanel Grid.Row="1" Margin="0,5,0,0">
                    <TextBlock Text="Password:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left"/>
                    <PasswordBox Grid.Column="1" Grid.Row="1"/>
                </StackPanel>-->
            </Grid>
            <Button Content="Log in" Foreground="White" Background="#428bca" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="LogInButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
